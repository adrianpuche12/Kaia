# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/kaia_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# ============================================
# AI PROVIDER CONFIGURATION
# ============================================

# Primary AI Provider (claude, gemini)
AI_PROVIDER=claude

# Fallback Configuration
AI_FALLBACK_ENABLED=true
AI_FALLBACK_PROVIDER=gemini

# Default Response Mode (strict, enhanced, expert, creative)
AI_RESPONSE_MODE=expert

# ============================================
# CLAUDE CONFIGURATION (Anthropic)
# ============================================
CLAUDE_API_KEY="your-claude-api-key"
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=8000
CLAUDE_TEMPERATURE=0.7

# ============================================
# GEMINI CONFIGURATION (Google AI)
# ============================================
GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL=gemini-1.5-pro
GEMINI_MAX_TOKENS=8000
GEMINI_TEMPERATURE=0.7

# ============================================
# EXTERNAL APIs (Legacy - Deprecar)
# ============================================
OPENAI_API_KEY="your-openai-api-key"
GOOGLE_SPEECH_API_KEY="your-google-speech-api-key"

# Twilio Configuration (SMS + WhatsApp)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone-number"
TWILIO_WHATSAPP_NUMBER="whatsapp:+14155238886"

# SendGrid Configuration (Email)
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@kaia.app"
SENDGRID_FROM_NAME="Kaia Assistant"

# Google Maps API (Geocoding, Routes, Places)
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Redis Configuration (for caching and rate limiting)
REDIS_URL="redis://localhost:6379"
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=60

# Sentry Configuration (Error Tracking - Only for Production)
SENTRY_DSN="your-sentry-dsn-here"